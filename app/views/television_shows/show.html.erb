<%= link_to 'Shows', television_shows_path %>
<h3><%= @television_show.title %></h3>

<ul>
  <li>Network: <%= @television_show.network %></li>
  <li>Years: <%= @television_show.years %></li>
</ul>

<div>
  <%= @television_show.synopsis %>
</div><br>



<h3>Characters</h3>
<a href="/television_shows/<%= "#{params[:id]}/characters/new"%>">Add character</a>
<ul>
<% @television_show.characters.each do |character| %>
  <li><%= character.character_name %></li>
  <li><%= character.actor_name %></li>
  <li><%= character.description %></li>
  <%end%>
</ul>

